---
import Layout from '../../../layouts/Layout.astro';
import Head from '../../../components/layout/Head.astro';
import Header from '../../../components/layout/Header.astro';
import Footer from '../../../components/layout/Footer.astro';
import { sanity } from '../../../lib/sanity';
import { createPageUrl } from '../../../lib/utils';
import { marked } from 'marked';

export async function getStaticPaths() {
  if (!sanity) return [];
  const posts = await sanity.fetch(`*[_type == "blogPost" && defined(slug.current) && status == "published"]{
    "slug": slug.current
  }`).catch(() => []);

  return posts.map((post: { slug: string }) => ({
    params: { slug: post.slug },
  }));
}

const { slug } = Astro.params;
const post = sanity ? await sanity.fetch(`*[_type == "blogPost" && slug.current == $slug][0]`, { slug }).catch(() => null) : null;

if (!post) {
  return Astro.redirect('/resources');
}

const content = post.content ? marked(post.content) : '';
---

<Layout>
  <Head slot="head" title={post.title} description={post.excerpt} />
  <Header />
  <main id="main-content" class="min-h-screen bg-white pt-24 pb-16">
    <article class="max-w-4xl mx-auto px-6 lg:px-8">
      <a
        href={createPageUrl('Resources')}
        class="inline-flex items-center gap-2 text-slate-500 hover:text-slate-700 mb-6 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Resources
      </a>

      <header class="mb-12">
        {post.category && (
          <span class="inline-block px-3 py-1 bg-primary/10 text-primary rounded-full text-sm font-medium mb-4">
            {post.category}
          </span>
        )}
        <h1 class="text-4xl lg:text-5xl font-bold text-primary mb-6">
          {post.title}
        </h1>
        <div class="flex items-center gap-4 text-sm text-slate-500">
          {post.publishedAt && (
            <span>{new Date(post.publishedAt).toLocaleDateString()}</span>
          )}
          {post.readTime && (
            <>
              <span>â€¢</span>
              <span>{post.readTime} min read</span>
            </>
          )}
        </div>
      </header>

      <div class="prose prose-lg max-w-none" set:html={content} />
    </article>
  </main>
  <Footer />
</Layout>

