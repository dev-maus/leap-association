---
import Layout from '../../layouts/Layout.astro';
import Head from '../../components/layout/Head.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
import { sanity } from '../../lib/sanity';
import { urlFor } from '../../lib/sanity';
import { createPageUrl } from '../../lib/utils';

// Fetch upcoming events from Sanity
const leapLunchSessions = sanity ? await sanity.fetch(`*[_type == "leapLunchSession" && isActive == true] | order(date asc)[0...5]`).catch(() => []) : [];
const signatureEventSessions = sanity ? await sanity.fetch(`*[_type == "signatureEventSession"] | order(date asc)[0...5]`).catch(() => []) : [];

// Overview cards data
const overviewCards = [
  {
    title: 'What It Is',
    icon: 'M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4',
    description: 'A premium venue designed specifically for leadership events, team building, and transformative experiences. Every detail is crafted to facilitate growth and connection.',
    color: 'from-blue-500 to-blue-600'
  },
  {
    title: 'Who It Serves',
    icon: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z',
    description: 'Executive teams seeking breakthrough sessions, groups of 10-50 people, organizations investing in their people, and leaders ready for transformation.',
    color: 'from-purple-500 to-purple-600'
  },
  {
    title: 'The Experience',
    icon: 'M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z',
    description: 'Deep work, meaningful connection, and breakthrough moments. An environment that inspires creativity, fosters collaboration, and drives lasting change.',
    color: 'from-amber-500 to-amber-600'
  }
];

// Premium amenities
const amenities = [
  { name: 'High-Speed WiFi', icon: 'M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0', description: 'Reliable connectivity throughout' },
  { name: 'Refreshments', icon: 'M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z', description: 'Coffee, tea & snacks' },
  { name: 'AV Equipment', icon: 'M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z', description: 'Projector & sound system' },
  { name: 'Sound System', icon: 'M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z', description: 'Premium audio setup' },
  { name: 'Catering Ready', icon: 'M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7', description: 'Full kitchen access' },
  { name: 'Flexible Space', icon: 'M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zm0 8a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zm12 0a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z', description: 'Configurable layout' }
];

// Pricing packages
const packages = [
  {
    name: 'Essentials',
    price: '$500',
    duration: '4 hours',
    capacity: '15 people',
    color: 'from-blue-500 to-blue-600',
    popular: false,
    includes: [
      'Private lounge access',
      'High-speed WiFi',
      'Coffee & tea service',
      'Basic AV equipment',
      'Whiteboard & markers',
      'Comfortable seating'
    ]
  },
  {
    name: 'Professional',
    price: '$1,200',
    duration: '8 hours',
    capacity: '30 people',
    color: 'from-primary to-primary-dark',
    popular: true,
    includes: [
      'Everything in Essentials',
      'Catered lunch & snacks',
      'Premium AV setup',
      'Breakout rooms',
      'Event coordinator',
      'Custom branding',
      'Photo documentation'
    ]
  },
  {
    name: 'Premium Experience',
    price: '$2,500',
    duration: 'Full day',
    capacity: '50 people',
    color: 'from-amber-500 to-amber-600',
    popular: false,
    includes: [
      'Everything in Professional',
      'Dedicated event manager',
      'Premium catering',
      'Live entertainment options',
      'Professional photography',
      'Team building activities',
      'Custom LEAP workshop',
      'Branded takeaways'
    ]
  }
];
---

<Layout>
  <Head slot="head" title="LEAP Lounge" description="Premier event venue in Atlanta for workshops, meetings, and team experiences." />
  <Header />
  <main id="main-content" class="min-h-screen bg-gradient-to-br from-slate-50 to-white pt-24 pb-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-2 bg-accent/10 text-accent font-bold text-sm tracking-wider uppercase rounded-full mb-6">
          The Ultimate Event Experience
        </span>
        <h1 class="text-4xl lg:text-6xl font-bold text-primary mb-6">
          LEAP Lounge
        </h1>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
          Where leaders gather, teams transform, and breakthrough moments happen.
          Our premier venue in Atlanta is designed for excellence.
        </p>
      </div>

      <!-- Overview Cards -->
      <div class="grid md:grid-cols-3 gap-8 mb-20">
        {overviewCards.map((card) => (
          <Card class="p-8 hover:shadow-xl transition-all group text-center">
            <div class={`w-16 h-16 rounded-2xl bg-gradient-to-br ${card.color} flex items-center justify-center mx-auto mb-6 shadow-lg group-hover:scale-110 transition-transform`}>
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={card.icon} />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-primary mb-4">{card.title}</h3>
            <p class="text-slate-600 leading-relaxed">{card.description}</p>
          </Card>
        ))}
      </div>

      <!-- Image Gallery Placeholder -->
      <div class="mb-20">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-primary mb-4">The Space</h2>
          <p class="text-lg text-slate-600">A venue designed for transformation</p>
        </div>
        <div class="grid md:grid-cols-3 gap-6">
          <div class="aspect-video bg-gradient-to-br from-slate-200 to-slate-300 rounded-2xl flex items-center justify-center">
            <div class="text-center p-6">
              <svg class="w-12 h-12 text-slate-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <p class="text-slate-500 font-medium">Main Space</p>
            </div>
          </div>
          <div class="aspect-video bg-gradient-to-br from-slate-200 to-slate-300 rounded-2xl flex items-center justify-center">
            <div class="text-center p-6">
              <svg class="w-12 h-12 text-slate-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <p class="text-slate-500 font-medium">Breakout Spaces</p>
            </div>
          </div>
          <div class="aspect-video bg-gradient-to-br from-slate-200 to-slate-300 rounded-2xl flex items-center justify-center">
            <div class="text-center p-6">
              <svg class="w-12 h-12 text-slate-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <p class="text-slate-500 font-medium">Collaboration Zones</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Premium Amenities -->
      <div class="mb-20">
        <div class="text-center mb-12">
          <span class="block text-primary font-semibold text-sm tracking-wider uppercase mb-4">
            Everything You Need
          </span>
          <h2 class="text-3xl font-bold text-primary mb-4">Premium Amenities</h2>
          <p class="text-lg text-slate-600 max-w-2xl mx-auto">
            Every detail considered so you can focus on what matters most
          </p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
          {amenities.map((amenity) => (
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 text-center hover:shadow-lg transition-shadow">
              <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={amenity.icon} />
                </svg>
              </div>
              <h4 class="font-bold text-slate-900 mb-1 text-sm">{amenity.name}</h4>
              <p class="text-xs text-slate-500">{amenity.description}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- Pricing Packages -->
      <div class="mb-20">
        <div class="text-center mb-12">
          <span class="block text-primary font-semibold text-sm tracking-wider uppercase mb-4">
            Flexible Options
          </span>
          <h2 class="text-3xl font-bold text-primary mb-4">Packages</h2>
          <p class="text-lg text-slate-600 max-w-2xl mx-auto">
            Choose the package that fits your event needs
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {packages.map((pkg) => (
            <Card class={`p-8 relative ${pkg.popular ? 'ring-2 ring-primary shadow-xl' : ''}`}>
              {pkg.popular && (
                <span class="absolute -top-4 left-1/2 -translate-x-1/2 px-4 py-1 bg-primary text-white text-sm font-bold rounded-full">
                  Most Popular
                </span>
              )}

              <div class={`w-16 h-16 rounded-2xl bg-gradient-to-br ${pkg.color} flex items-center justify-center mb-6 shadow-lg`}>
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                </svg>
              </div>

              <h3 class="text-2xl font-bold text-primary mb-2">{pkg.name}</h3>
              <p class="text-4xl font-bold text-slate-900 mb-4">{pkg.price}</p>

              <div class="flex gap-4 mb-6 text-sm text-slate-600">
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  {pkg.duration}
                </span>
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  {pkg.capacity}
                </span>
              </div>

              <ul class="space-y-3 mb-8">
                {pkg.includes.map((item) => (
                  <li class="flex items-start gap-3 text-sm">
                    <svg class="w-5 h-5 text-emerald-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="text-slate-600">{item}</span>
                  </li>
                ))}
              </ul>

              <Button href={createPageUrl('Contact')} class={`w-full ${pkg.popular ? 'bg-primary hover:bg-primary-dark' : ''}`}>
                Book This Package
              </Button>
            </Card>
          ))}
        </div>
      </div>

      <!-- Upcoming Events Calendar -->
      {(leapLunchSessions.length > 0 || signatureEventSessions.length > 0) && (
        <div class="mb-20">
          <div class="text-center mb-12">
            <span class="block text-primary font-semibold text-sm tracking-wider uppercase mb-4">
              What's Coming Up
            </span>
            <h2 class="text-3xl font-bold text-primary mb-4">Upcoming Events</h2>
            <p class="text-lg text-slate-600 max-w-2xl mx-auto">
              Join one of our scheduled events at the LEAP Lounge
            </p>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {[...leapLunchSessions, ...signatureEventSessions].slice(0, 6).map((event: any) => (
              <Card class="overflow-hidden hover:shadow-xl transition-all">
                <div class="aspect-video bg-gradient-to-br from-primary/10 to-primary/5 flex items-center justify-center relative">
                  {event.featuredImage ? (
                    <img
                      src={urlFor(event.featuredImage)?.width(400).height(225).url()}
                      alt={event.title}
                      class="w-full h-full object-cover"
                    />
                  ) : (
                    <svg class="w-16 h-16 text-primary/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  )}
                  {event.eventType && (
                    <span class="absolute top-3 left-3 px-3 py-1 bg-primary text-white text-xs font-bold rounded-full">
                      {event.eventType}
                    </span>
                  )}
                  {event.isPaid && (
                    <span class="absolute top-3 right-3 px-3 py-1 bg-amber-500 text-white text-xs font-bold rounded-full">
                      Paid
                    </span>
                  )}
                </div>
                <div class="p-6">
                  <h3 class="font-bold text-primary text-lg mb-2">{event.title}</h3>
                  <div class="space-y-2 text-sm text-slate-600">
                    {event.date && (
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        {new Date(event.date).toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric' })}
                      </div>
                    )}
                    {event.location && (
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        </svg>
                        {event.location}
                      </div>
                    )}
                    {event.maxParticipants && (
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        {event.currentRegistrations || 0} / {event.maxParticipants} spots
                      </div>
                    )}
                  </div>
                </div>
              </Card>
            ))}
          </div>
        </div>
      )}

      <!-- CTA Section -->
      <div class="bg-gradient-to-br from-primary to-primary-dark rounded-3xl p-6 sm:p-10 lg:p-16 text-white text-center relative overflow-hidden">
        <div class="absolute -top-10 -right-10 w-64 h-64 bg-white/10 rounded-full blur-3xl" />
        <div class="absolute -bottom-10 -left-10 w-80 h-80 bg-accent/10 rounded-full blur-3xl" />

        <div class="relative z-10">
          <h2 class="text-3xl lg:text-4xl font-bold mb-4">
            Ready to Transform Your Next Event?
          </h2>
          <p class="text-slate-200 text-lg mb-8 max-w-2xl mx-auto">
            Let's create an unforgettable experience for your team. Book the LEAP Lounge
            for your next workshop, meeting, or leadership event.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href={createPageUrl('Contact')} class="inline-block px-8 py-4 bg-white text-primary rounded-xl font-semibold hover:bg-slate-100 transition-colors">
              Book Your Event
            </a>
            <a href={createPageUrl('ScheduleCall')} class="inline-block px-8 py-4 bg-white/10 border-2 border-white/30 text-white rounded-xl font-semibold hover:bg-white/20 transition-colors">
              Schedule a Tour
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

