---
import { sanity } from '../lib/sanity';

// Fetch booking URL from Sanity
const siteSettings = await sanity.fetch<{ bookingUrl?: string } | null>(
  `*[_type == "siteSettings"][0] { bookingUrl }`
);

const bookingUrl = siteSettings?.bookingUrl;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Redirecting to Booking...</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background: linear-gradient(to bottom right, #f8fafc, #ffffff);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .spinner-container {
      text-align: center;
    }
    .spinner {
      width: 64px;
      height: 64px;
      border: 4px solid #e2e8f0;
      border-top-color: #76648F;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin: 0 auto 24px;
    }
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
    .text {
      color: #475569;
      font-size: 18px;
      font-weight: 500;
    }
    .fallback-link {
      margin-top: 16px;
      color: #76648F;
      text-decoration: none;
      font-size: 14px;
      display: inline-block;
    }
    .fallback-link:hover {
      text-decoration: underline;
    }
  </style>
  {bookingUrl ? (
    <script is:inline define:vars={{ bookingUrl }}>
      (function() {
        function buildUrl() {
          try {
            const details = JSON.parse(localStorage.getItem('leap_user_details') || '{}');
            const url = new URL(bookingUrl);
            if (details.full_name?.trim()) url.searchParams.set('name', details.full_name.trim());
            if (details.email?.trim()) url.searchParams.set('email', details.email.trim());
            return url.toString();
          } catch (e) {
            console.error('Error building URL:', e);
            return bookingUrl;
          }
        }
        
        function redirect() {
          const finalUrl = buildUrl();
          if (import.meta.env.DEV) {
            console.log('Redirecting to:', finalUrl);
          }
          window.location.replace(finalUrl);
          
          // Update fallback link
          const link = document.getElementById('fallback-link');
          if (link) link.href = finalUrl;
        }
        
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', redirect);
        } else {
          redirect();
        }
      })();
    </script>
  ) : (
    <meta http-equiv="refresh" content="0; url=/" />
  )}
</head>
<body>
  <div class="spinner-container">
    <div class="spinner"></div>
    <p class="text">Redirecting to booking page...</p>
    {bookingUrl && (
      <a href={bookingUrl} id="fallback-link" class="fallback-link">
        Click here if you are not redirected automatically
      </a>
    )}
  </div>
</body>
</html>

