---
import Layout from '../../layouts/Layout.astro';
import Head from '../../components/layout/Head.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import Breadcrumbs from '../../components/common/Breadcrumbs.astro';
import Button from '../../components/ui/Button.astro';
import { sanity } from '../../lib/sanity';
import { createPageUrl } from '../../lib/utils';

const service = sanity ? await sanity.fetch(`*[_type == "service" && slug == "keynotes"][0]`).catch(() => null) : null;
---

<Layout>
  <Head slot="head" title="Keynotes & Speaking" description="High-impact keynotes that challenge thinking, inspire action, and provide practical tools." />
  <Header />
  <main id="main-content" class="min-h-screen bg-gradient-to-br from-slate-50 to-white pt-24 pb-16">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <Breadcrumbs items={[
        { label: 'Solutions', path: createPageUrl('Solutions') },
        { label: 'Keynotes' }
      ]} />

      <div class="text-center mb-16">
        <h1 class="text-4xl lg:text-5xl font-bold text-primary mb-6">
          {service?.title || 'Keynotes & Speaking'}
        </h1>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          {service?.subtitle || 'Inspire Your Audience'}
        </p>
      </div>

      <div class="prose prose-lg max-w-none mb-12">
        {service?.description ? (
          <p class="text-lg text-slate-600 leading-relaxed">{service.description}</p>
        ) : (
          <p class="text-lg text-slate-600 leading-relaxed">
            High-impact keynotes that challenge thinking, inspire action, and provide practical tools.
            From "Always LEAP Higher" to industry-specific talks, our speaking engagements transform
            audiences and drive organizational change.
          </p>
        )}
      </div>

      <div class="bg-gradient-to-br from-primary to-primary-dark rounded-3xl p-6 sm:p-10 text-white text-center">
        <h2 class="text-3xl font-bold mb-4">Book a Keynote</h2>
        <p class="text-slate-200 mb-8 max-w-2xl mx-auto">
          Bring LEAP to your next event, conference, or organization.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href={`${import.meta.env.BASE_URL}services/keynote-booking`} variant="secondary" size="lg" class="bg-white text-primary hover:bg-slate-100">
            Book a Keynote
          </Button>
          <Button href={createPageUrl('Contact')} variant="outline" size="lg" class="bg-white/10 border-2 border-white/30 text-white hover:bg-white/20">
            Contact Us
          </Button>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

