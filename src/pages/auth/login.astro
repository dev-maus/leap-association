---
import Layout from '../../layouts/Layout.astro';
import Head from '../../components/layout/Head.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import LoginForm from '../../components/islands/LoginForm';
import { createPageUrl } from '../../lib/utils';
---

<Layout>
  <Head slot="head" title="Login" description="Sign in to your LEAP Association account." />
  <Header />
  <main id="main-content" class="min-h-screen bg-gradient-to-br from-slate-50 to-white pt-24 pb-16">
    <div class="max-w-md mx-auto px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-3xl lg:text-4xl font-bold text-primary mb-4">
          Sign In
        </h1>
        <p class="text-slate-600">
          Access your account to manage your assessments and resources.
        </p>
      </div>

      <LoginForm client:load />

      <div class="mt-6 text-center">
        <a href={`${import.meta.env.BASE_URL}auth/forgot-password`} class="text-primary hover:underline text-sm">
          Forgot your password?
        </a>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

