---
import Layout from '../../layouts/Layout.astro';
import Head from '../../components/layout/Head.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import MagicLinkForm from '../../components/islands/MagicLinkForm';
---

<Layout>
  <Head slot="head" title="Sign In with Magic Link" description="Sign in to your LEAP Association account using a magic link sent to your email." />
  <Header />
  <main id="main-content" class="min-h-screen bg-gradient-to-br from-slate-50 to-white pt-24 pb-16">
    <div class="max-w-md mx-auto px-6 lg:px-8">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-primary mb-4">Sign In</h1>
        <p class="text-slate-600">Enter your email to receive a magic link</p>
      </div>
      <MagicLinkForm client:load />
    </div>
  </main>
  <Footer />
</Layout>

