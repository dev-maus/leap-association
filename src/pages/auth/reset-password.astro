---
import Layout from '../../layouts/Layout.astro';
import Head from '../../components/layout/Head.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import ResetPasswordForm from '../../components/islands/ResetPasswordForm';
---

<Layout>
  <Head slot="head" title="Reset Password" description="Set a new password for your LEAP Association account." />
  <Header />
  <main id="main-content" class="min-h-screen bg-gradient-to-br from-slate-50 to-white pt-24 pb-16">
    <div class="max-w-md mx-auto px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-3xl lg:text-4xl font-bold text-primary mb-4">
          Set New Password
        </h1>
        <p class="text-slate-600">
          Enter your new password below.
        </p>
      </div>

      <ResetPasswordForm client:load />
    </div>
  </main>
  <Footer />
</Layout>

