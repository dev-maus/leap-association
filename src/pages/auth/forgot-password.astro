---
import Layout from '../../layouts/Layout.astro';
import Head from '../../components/layout/Head.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import ForgotPasswordForm from '../../components/islands/ForgotPasswordForm';
---

<Layout>
  <Head slot="head" title="Forgot Password" description="Reset your LEAP Association account password." />
  <Header />
  <main id="main-content" class="min-h-screen bg-gradient-to-br from-slate-50 to-white pt-24 pb-16">
    <div class="max-w-md mx-auto px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-3xl lg:text-4xl font-bold text-primary mb-4">
          Reset Password
        </h1>
        <p class="text-slate-600">
          Enter your email address and we'll send you a link to reset your password.
        </p>
      </div>

      <ForgotPasswordForm client:load />
    </div>
  </main>
  <Footer />
</Layout>

