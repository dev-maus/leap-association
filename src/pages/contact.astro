---
import Layout from '../layouts/Layout.astro';
import Head from '../components/layout/Head.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import ContactForm from '../components/islands/ContactForm';
import { sanity } from '../lib/sanity';
import { createPageUrl } from '../lib/utils';

const siteSettings = await sanity.fetch(`*[_type == "siteSettings"][0]`).catch(() => null);
---

<Layout>
  <Head slot="head" title="Contact Us" description="Get in touch with LEAP Association. We're here to help you transform your leadership practice." />
  <Header />
  <main id="main-content" class="min-h-screen bg-gradient-to-br from-slate-50 to-white pt-24 pb-16">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-12">
        <a
          href={createPageUrl('Home')}
          class="inline-flex items-center gap-2 text-slate-500 hover:text-slate-700 mb-6 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Home
        </a>

        <span class="block text-primary font-semibold text-sm tracking-wider uppercase mb-4">
          Get In Touch
        </span>
        <h1 class="text-3xl lg:text-4xl font-bold text-primary mb-4">
          Let's Start a Conversation
        </h1>
        <p class="text-lg text-slate-600 max-w-2xl mx-auto">
          Have a question about our services, speaking engagements, or LEAP programs?
          We're here to help.
        </p>
      </div>

      <div class="grid lg:grid-cols-5 gap-12">
        <!-- Left - Contact Info -->
        <div class="lg:col-span-2">
          <div class="bg-primary rounded-3xl p-8 text-white sticky top-28">
            <h2 class="text-xl font-bold mb-6">Contact Information</h2>

            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-xl bg-white/20 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold mb-1">Email</h3>
                  <p class="text-slate-300 text-sm">{siteSettings?.email || 'service@leapassociation.com'}</p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-xl bg-white/20 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold mb-1">Phone</h3>
                  <p class="text-slate-300 text-sm">{siteSettings?.phone || '(424) 999-LEAP (5327)'}</p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-xl bg-white/20 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold mb-1">Location</h3>
                  <p class="text-slate-300 text-sm">
                    {siteSettings?.address || '50 Hurt Plaza\nAtlanta, GA 30303'}
                  </p>
                </div>
              </div>
            </div>

            <div class="mt-8 pt-8 border-t border-white/10">
              <p class="text-sm text-slate-300">
                "Create a GREAT dayâ€¦ and keep making GREAT even better."
              </p>
            </div>
          </div>
        </div>

        <!-- Right - Form -->
        <div class="lg:col-span-3">
          <div class="bg-white rounded-3xl shadow-xl border border-slate-100 p-8 lg:p-10">
            <div class="flex items-center gap-3 mb-8">
              <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
              </div>
              <div>
                <h2 class="text-xl font-bold text-primary">Send us a Message</h2>
                <p class="text-slate-500 text-sm">We'll get back to you soon</p>
              </div>
            </div>

            <ContactForm client:load />
          </div>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

