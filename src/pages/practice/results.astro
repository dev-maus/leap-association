---
import Layout from '../../layouts/Layout.astro';
import Head from '../../components/layout/Head.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import AssessmentResults from '../../components/islands/AssessmentResults';
import { createPageUrl } from '../../lib/utils';

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/practice');
}
---

<Layout>
  <Head slot="head" title="Assessment Results" description="View your HATS Assessment results and LEAP dimension scores." />
  <Header />
  <main id="main-content" class="min-h-screen bg-gradient-to-br from-slate-50 to-white pt-24 pb-16">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <a
        href={createPageUrl('Practice')}
        class="inline-flex items-center gap-2 text-slate-500 hover:text-slate-700 mb-6 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Practice
      </a>

      <AssessmentResults client:load responseId={id} />
    </div>
  </main>
  <Footer />
</Layout>

