---
import Layout from '../../layouts/Layout.astro';
import Head from '../../components/layout/Head.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import { createPageUrl } from '../../lib/utils';
import { urlForFile } from '../../lib/sanity';
import CTAButtons from '../../components/common/CTAButtons';
import { sanity } from '../../lib/sanity';

const practiceResourcesData = sanity ? await sanity.fetch(`*[_type == "practiceResource" && status == "published"] | order(order asc){ _id, order, title, type, description, icon, file, downloadUrl, requiresEmail }`).catch(() => []) : [];
const defaultResources = [
  { title: 'Individual HATS™ Guide', type: 'PDF Guide', description: 'Complete guide to understanding your individual practice patterns.', icon: 'M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z' },
  { title: 'Team HATS™ Guide', type: 'PDF Guide', description: 'Learn how to assess and improve team-wide practice patterns.', icon: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z' },
  { title: 'Individual vs Team Comparison', type: 'Infographic', description: 'Visual comparison of individual and team assessment approaches.', icon: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z' },
  { title: 'LEAP Practice Guide', type: 'Workbook', description: 'Practical exercises for building intentional practice habits.', icon: 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253' },
];
const practiceResources = practiceResourcesData.length > 0 ? practiceResourcesData : defaultResources;
const heroPractice = sanity ? await sanity.fetch(`*[_type == "hero" && page == "practice"][0]{ heading, subheading }`).catch(() => null) : null;

type PracticeResourceItem = { title: string; type: string; description?: string; desc?: string; icon?: string; downloadUrl?: string; file?: unknown };
---

<Layout>
  <Head slot="head" title="What's In Your Practice? - HATS Assessment" description="Discover what you're practicing with the HATS Assessment. Reveal your practice patterns and how they connect to excellence." />
  <Header />
  <main id="main-content" class="min-h-screen bg-gradient-to-br from-slate-50 to-white pt-24 pb-16">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-16">
        <a
          href={createPageUrl('Home')}
          class="inline-flex items-center gap-2 text-slate-500 hover:text-slate-700 mb-6 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Home
        </a>

        <span class="block text-primary font-semibold text-sm tracking-wider uppercase mb-4">
          Discover What You're Practicing™
        </span>
        <h1 class="text-4xl lg:text-5xl font-bold text-primary mb-6">
          {heroPractice?.heading ?? "What's In Your Practice?"}
        </h1>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
          {heroPractice?.subheading ?? "You are always practicing something, whether you know it or not. The HATS™ Assessment reveals exactly what you're practicing and how it connects to excellence."}
        </p>
      </div>

      <!-- Assessment Type Selection -->
      <div class="grid lg:grid-cols-2 gap-8 mb-16">
        <Card class="p-8 hover:shadow-2xl transition-shadow group text-center">
          <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center mb-6 shadow-lg group-hover:scale-110 transition-transform mx-auto">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-primary mb-3">
            Individual HATS™
          </h3>
          <p class="text-slate-600 mb-6 leading-relaxed">
            Discover your personal practice patterns and how they map to the LEAP Framework.
            Perfect for leaders, executives, and professionals seeking individual growth.
          </p>

          <div class="space-y-3 mb-8 inline-flex flex-col mx-auto">
            {[
              'Personal practice pattern analysis',
              'LEAP dimension mapping',
              'Immediate actionable insights',
              'Personalized growth recommendations'
            ].map((benefit) => (
              <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-slate-700">{benefit}</span>
              </div>
            ))}
          </div>

          <div class="flex items-center justify-between text-sm text-slate-500 mb-6">
            <span>8 questions</span>
            <span>•</span>
            <span>8 minutes</span>
            <span>•</span>
            <span>Instant results</span>
          </div>

          <Button href={`${import.meta.env.BASE_URL}practice/individual`} class="w-full bg-blue-600 hover:bg-blue-700 text-white py-6 rounded-xl">
            Start Individual Assessment
          </Button>
        </Card>

        <Card class="p-8 hover:shadow-2xl transition-shadow group text-center">
          <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-amber-500 to-amber-600 flex items-center justify-center mb-6 shadow-lg group-hover:scale-110 transition-transform mx-auto">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-primary mb-3">
            Team HATS™
          </h3>
          <p class="text-slate-600 mb-6 leading-relaxed">
            Reveal collective team patterns and organizational behaviors.
            Ideal for team leaders, managers, and those driving organizational change.
          </p>

          <div class="space-y-3 mb-8 inline-flex flex-col mx-auto">
            {[
              'Team-wide practice assessment',
              'Collective behavior patterns',
              'Organizational alignment insights',
              'Team development roadmap'
            ].map((benefit) => (
              <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-amber-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-slate-700">{benefit}</span>
              </div>
            ))}
          </div>

          <div class="flex items-center justify-between text-sm text-slate-500 mb-6">
            <span>12 questions</span>
            <span>•</span>
            <span>12 minutes</span>
            <span>•</span>
            <span>Team insights</span>
          </div>

          <Button href={`${import.meta.env.BASE_URL}practice/team`} class="w-full bg-amber-600 hover:bg-amber-700 text-white py-6 rounded-xl">
            Start Team Assessment
          </Button>
        </Card>
      </div>

      <!-- Why Practice Matters -->
      <div class="bg-gradient-to-br from-primary to-primary-dark rounded-3xl p-8 lg:p-12 text-white mb-16">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl font-bold mb-6">Why Practice Matters</h2>
            <p class="text-slate-200 mb-6 text-lg leading-relaxed">
              Every action you take is practice. Every meeting, every decision, every interaction
              is training you to behave a certain way in the future. The question isn't whether
              you're practicing, it's what you're practicing.
            </p>
            <p class="text-slate-200 text-lg leading-relaxed">
              HATS™ breaks down your practice patterns into four critical categories that determine
              whether you're building excellence or just building habits.
            </p>
          </div>
          <div class="space-y-4">
            {[
              { letter: 'H', title: 'Habits', desc: 'Unconscious, automatic behaviors' },
              { letter: 'A', title: 'Abilities', desc: 'Conscious, repeatable actions' },
              { letter: 'T', title: 'Talents', desc: 'Natural gifts and strengths' },
              { letter: 'S', title: 'Skills', desc: 'Developed competencies' }
            ].map((item) => (
              <div class="flex items-center gap-4 bg-white/10 backdrop-blur-sm rounded-2xl p-4">
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-accent to-accent-light flex items-center justify-center flex-shrink-0 shadow-lg">
                  <span class="text-2xl font-bold text-white">{item.letter}</span>
                </div>
                <div>
                  <h3 class="font-bold text-lg">{item.title}</h3>
                  <p class="text-slate-300 text-sm">{item.desc}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- LEAP Connection Section -->
      <div class="mb-16">
        <div class="text-center mb-12">
          <span class="block text-primary font-semibold text-sm tracking-wider uppercase mb-4">
            The Connection
          </span>
          <h2 class="text-3xl lg:text-4xl font-bold text-primary mb-4">
            How HATS™ Maps to LEAP
          </h2>
          <p class="text-lg text-slate-600 max-w-2xl mx-auto">
            Your HATS™ assessment results connect directly to the four LEAP dimensions,
            showing you where to focus your intentional practice.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {[
            {
              letter: 'L',
              title: 'Leadership',
              desc: 'How you guide others',
              connection: 'Your Habits and Talents shape how others perceive and follow your lead.',
              color: 'from-blue-500 to-blue-600'
            },
            {
              letter: 'E',
              title: 'Effectiveness',
              desc: 'Ability to produce results',
              connection: 'Your Skills and Abilities determine how consistently you deliver outcomes.',
              color: 'from-emerald-500 to-emerald-600'
            },
            {
              letter: 'A',
              title: 'Accountability',
              desc: 'Taking ownership',
              connection: 'Your Habits around commitment and follow-through build trust.',
              color: 'from-purple-500 to-purple-600'
            },
            {
              letter: 'P',
              title: 'Productivity',
              desc: 'Consistent value creation',
              connection: 'All four HATS elements combine to create sustainable output.',
              color: 'from-amber-500 to-amber-600'
            }
          ].map((item) => (
            <Card class="p-6 text-center hover:shadow-xl transition-all group">
              <div class={`w-16 h-16 rounded-2xl bg-gradient-to-br ${item.color} flex items-center justify-center mx-auto mb-4 shadow-lg group-hover:scale-110 transition-transform`}>
                <span class="text-3xl font-bold text-white">{item.letter}</span>
              </div>
              <h3 class="text-xl font-bold text-primary mb-1">{item.title}</h3>
              <p class="text-accent font-medium text-sm mb-3">{item.desc}</p>
              <p class="text-slate-600 text-sm leading-relaxed">{item.connection}</p>
            </Card>
          ))}
        </div>
      </div>

      <!-- Free Resources Section -->
      <div class="mb-16">
        <div class="text-center mb-12">
          <span class="block text-primary font-semibold text-sm tracking-wider uppercase mb-4">
            Free Resources
          </span>
          <h2 class="text-3xl lg:text-4xl font-bold text-primary mb-4">
            Deepen Your Understanding
          </h2>
          <p class="text-lg text-slate-600 max-w-2xl mx-auto">
            Download these free resources to learn more about the HATS™ framework
            and how it connects to building excellence.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {practiceResources.map((resource: PracticeResourceItem) => {
            const desc = resource.description ?? resource.desc ?? '';
            const href = resource.downloadUrl ?? (resource.file ? urlForFile(resource.file) : null) ?? createPageUrl('Contact');
            const isRequest = !resource.downloadUrl && !resource.file;
            return (
              <Card class="p-6 hover:shadow-xl transition-all group">
                <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                  {resource.icon ? (
                    <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={resource.icon} />
                    </svg>
                  ) : (
                    <span class="text-primary font-bold">{resource.title?.slice(0, 1)}</span>
                  )}
                </div>
                <span class="inline-block px-2 py-1 bg-accent/10 text-accent text-xs font-semibold rounded mb-3">
                  {resource.type}
                </span>
                <h3 class="font-bold text-primary mb-2">{resource.title}</h3>
                <p class="text-sm text-slate-600 mb-4 leading-relaxed">{desc}</p>
                <a href={href} class="w-full py-2 px-4 bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-lg text-sm font-medium transition-colors flex items-center justify-center gap-2" target={isRequest ? undefined : '_blank'} rel={isRequest ? undefined : 'noopener noreferrer'}>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                  </svg>
                  {isRequest ? 'Request Guide' : 'Download'}
                </a>
              </Card>
            );
          })}
        </div>
      </div>

      <!-- Final CTA -->
      <div class="text-center">
        <div class="bg-gradient-to-r from-primary to-primary-dark rounded-3xl p-6 sm:p-10 text-white relative overflow-hidden">
          <div class="relative z-10">
            <h2 class="text-3xl font-bold mb-4">
              Ready to Discover What You're Practicing?
            </h2>
            <p class="text-slate-200 text-lg mb-8 max-w-2xl mx-auto">
              Take the first step toward intentional excellence. Your assessment takes less than 10 minutes.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <CTAButtons client:load />
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

