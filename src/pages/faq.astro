---
import Layout from '../layouts/Layout.astro';
import Head from '../components/layout/Head.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Accordion from '../components/ui/Accordion.astro';
import Button from '../components/ui/Button.astro';
import { sanity } from '../lib/sanity';
import { createPageUrl } from '../lib/utils';

const faqs = sanity ? await sanity.fetch(`*[_type == "faq"] | order(category asc, _createdAt asc)`).catch(() => []) : [];

// Group FAQs by category
const faqCategories = faqs.reduce((acc: any, faq: any) => {
  const category = faq.category || 'General';
  if (!acc[category]) {
    acc[category] = [];
  }
  acc[category].push({
    question: faq.question,
    answer: faq.answer,
  });
  return acc;
}, {});

// Default FAQs if none in Sanity
const defaultCategories = {
  'Services': [
    {
      question: 'What services does LEAP Association offer?',
      answer: 'We offer comprehensive leadership development through consulting, training, coaching, keynotes, and our signature HATS™ assessments. Our services span strategic organizational consulting, leadership training programs, executive coaching, and team development workshops.',
    },
    {
      question: 'What is the LEAP Framework?',
      answer: 'LEAP stands for Leadership, Effectiveness, Accountability, and Productivity. It\'s our foundational framework for transforming individual and organizational performance through intentional practice. Each dimension builds on repeatable, reliable, scalable behaviors.',
    },
  ],
  'Getting Started': [
    {
      question: 'What\'s the first step to work with LEAP Association?',
      answer: 'Start with a complimentary HATS™ Assessment to understand your current practice patterns, or schedule a LEAP Strategy Call to discuss your specific needs. Both options help us customize the right solution for you.',
    },
  ],
};
---

<Layout>
  <Head slot="head" title="Frequently Asked Questions" description="Find answers to common questions about LEAP Association services, programs, and the LEAP Framework." />
  <Header />
  <main id="main-content" class="min-h-screen bg-gradient-to-br from-slate-50 to-white pt-24 pb-16">
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-12">
        <a
          href={createPageUrl('Home')}
          class="inline-flex items-center gap-2 text-slate-500 hover:text-slate-700 mb-6 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Home
        </a>

        <div class="w-16 h-16 rounded-2xl bg-primary/10 flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>

        <h1 class="text-3xl lg:text-4xl font-bold text-primary mb-4">
          Frequently Asked Questions
        </h1>
        <p class="text-lg text-slate-600 max-w-2xl mx-auto">
          Find answers to common questions about our services, programs, and the LEAP Framework.
        </p>
      </div>

      <!-- FAQ Sections -->
      <div class="space-y-8">
        {Object.keys(faqCategories.length > 0 ? faqCategories : defaultCategories).map((category) => (
          <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 lg:p-8">
            <h2 class="text-xl font-bold text-primary mb-6">{category}</h2>
            <Accordion items={faqCategories[category] || defaultCategories[category]} />
          </div>
        ))}
      </div>

      <!-- CTA Section -->
      <div class="mt-16 bg-gradient-to-br from-primary to-primary-dark rounded-3xl p-8 lg:p-12 text-center text-white">
        <h2 class="text-2xl lg:text-3xl font-bold mb-4">
          Still Have Questions?
        </h2>
        <p class="text-slate-200 mb-8 max-w-2xl mx-auto">
          We're here to help you understand how LEAP can transform your leadership and organization.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href={createPageUrl('Contact')} variant="secondary" size="lg">
            Contact Us
          </Button>
          <Button href={createPageUrl('ScheduleCall')} variant="outline" size="lg" class="bg-white/10 border-white/20 text-white hover:bg-white/20">
            Schedule a Call
          </Button>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

