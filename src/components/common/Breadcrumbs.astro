---
interface Props {
  items: Array<{ label: string; path?: string }>;
}

const { items } = Astro.props;
---

<nav class="mb-8" aria-label="Breadcrumb">
  <ol class="flex items-center gap-2 text-sm text-slate-600">
    {items.map((item, index) => (
      <>
        {index > 0 && <span class="text-slate-400">/</span>}
        <li>
          {item.path ? (
            <a href={item.path} class="hover:text-primary transition-colors">
              {item.label}
            </a>
          ) : (
            <span class="text-slate-900 font-medium">{item.label}</span>
          )}
        </li>
      </>
    ))}
  </ol>
</nav>

