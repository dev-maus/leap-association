---
import { sanity } from '../../lib/sanity';
import { urlFor } from '../../lib/sanity';
import { createPageUrl } from '../../lib/utils';

const leapItems = sanity ? await sanity.fetch(`*[_type == "leapFramework"] | order(order asc)`).catch(() => []) : [];

// Default LEAP items if none in Sanity
const defaultItems = [
  {
    letter: 'L',
    title: 'Leadership',
    subtitle: 'The practice of influence.',
    description: 'How you show up determines how others follow, align, and collaborate.',
    color: 'from-blue-500 to-blue-600',
    icon: 'Users'
  },
  {
    letter: 'E',
    title: 'Effectiveness',
    subtitle: 'Meaningful Progress',
    description: 'Advancing the right priorities through disciplined, focused, and aligned execution.',
    color: 'from-emerald-500 to-emerald-600',
    icon: 'Target'
  },
  {
    letter: 'A',
    title: 'Accountability',
    subtitle: 'Practice Accountability',
    description: 'Own commitments, follow through on priorities, and take responsibility for outcomes that drive organizational success.',
    color: 'from-purple-500 to-purple-600',
    icon: 'Shield'
  },
  {
    letter: 'P',
    title: 'Productivity',
    subtitle: 'Create Systems',
    description: 'Optimize rhythms and priorities that enable consistent progress and long-term organizational impact.',
    color: 'from-amber-500 to-amber-600',
    icon: 'Zap'
  },
];

// Always use default items to ensure correct updated names (Effectiveness, Accountability, Productivity)
const displayItems = defaultItems;
---

<section id="leap" class="py-24 lg:py-32 bg-slate-50 overflow-hidden relative">
  <!-- Decorative Bubbles -->
  <div class="absolute top-20 -left-20 w-[400px] h-[400px] bg-purple-500/20 rounded-full blur-3xl"></div>
  <div class="absolute top-1/2 -right-20 w-[300px] h-[300px] bg-purple-600/15 rounded-full blur-3xl"></div>
  <div class="absolute bottom-20 left-1/3 w-[250px] h-[250px] bg-purple-400/20 rounded-full blur-3xl"></div>

  <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">

    <!-- Section Header -->
    <div class="text-center mb-20 relative reveal">
      <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-32 h-32 bg-primary/5 rounded-full blur-3xl -z-10"></div>
      <h2 class="font-display text-4xl lg:text-5xl font-bold text-ink mb-6 tracking-tight">
        The LEAP Philosophy and Framework
      </h2>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed mb-8">
        LEAP is a leadership philosophy brought to life through a practical framework that helps individuals, teams, and organizations intentionally practice how they live, lead, and grow.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4 sm:gap-8 text-left max-w-2xl mx-auto">
        <div class="flex items-start gap-2">
          <div class="w-2 h-2 rounded-full bg-accent mt-2 flex-shrink-0"></div>
          <span class="text-slate-700 font-medium">"Philosophy" leads identity</span>
        </div>
        <div class="flex items-start gap-2">
          <div class="w-2 h-2 rounded-full bg-accent mt-2 flex-shrink-0"></div>
          <span class="text-slate-700 font-medium">"Framework" anchors action</span>
        </div>
        <div class="flex items-start gap-2">
          <div class="w-2 h-2 rounded-full bg-accent mt-2 flex-shrink-0"></div>
          <span class="text-slate-700 font-medium">"Intentional practice" creates transformation</span>
        </div>
      </div>
    </div>

    <!-- LEAP Cards - Modern Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-24">
      {displayItems.map((item: any, index: number) => (
        <a href={createPageUrl(item.title)} class={`reveal stagger-${index + 1} group relative bg-white rounded-3xl overflow-hidden shadow-sm hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-slate-100 block no-underline`}>

          <!-- Colored Accent Header -->
          <div class={`h-2 w-full bg-gradient-to-r ${item.color || 'from-primary to-primary-dark'}`}></div>

          <div class="p-8">
            <!-- Letter / Icon -->
            <div class="flex items-center justify-between mb-6">
               <div class={`w-14 h-14 rounded-2xl bg-gradient-to-br ${item.color || 'from-primary to-primary-dark'} flex items-center justify-center text-white font-display text-2xl font-bold shadow-lg group-hover:scale-110 transition-transform duration-300`}>
                  {item.letter || item.title?.[0]}
               </div>
               <div class="w-8 h-8 rounded-full bg-slate-50 flex items-center justify-center text-slate-400 group-hover:text-primary transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-up-right group-hover:rotate-45 transition-transform"><path d="M7 7h10v10"/><path d="M7 17 17 7"/></svg>
               </div>
            </div>

            <h3 class="font-display text-2xl font-bold text-ink mb-3 group-hover:text-primary transition-colors">{item.title}</h3>
            <p class="text-primary font-medium text-sm mb-4 uppercase tracking-wide opacity-80">{item.subtitle}</p>
            <p class="text-slate-600 leading-relaxed text-sm group-hover:text-slate-900 transition-colors">{item.description}</p>
          </div>

          <!-- Subtle background letter -->
          <div class="absolute -bottom-4 -right-4 font-display text-[120px] font-black text-slate-50/80 -z-10 group-hover:text-primary/5 transition-colors select-none pointer-events-none">
            {item.letter || item.title?.[0]}
          </div>
        </a>
      ))}
    </div>

    <!-- Why LEAP Section -->
    <div class="reveal-scale bg-primary rounded-3xl p-10 lg:p-16 text-white">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h3 class="text-3xl lg:text-4xl font-bold mb-4">
            Why LEAP Is Foundational
          </h3>
          <p class="text-accent text-xl font-semibold mb-6">
            Because lasting transformation is built on practiced identity, not momentary motivation.
          </p>
          <p class="text-slate-300 text-lg leading-relaxed mb-6">
            LEAP focuses on the daily habits, awareness, and intentional practice that shape how people live and lead. When the foundation is strong, growth isn't forcedâ€”it's inevitable.
          </p>
        </div>

        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8">
          <h4 class="font-bold text-accent text-lg uppercase tracking-wider mb-6">
            LEAP as a Continuous Improvement Engine
          </h4>
          <p class="text-slate-300 mb-6">
            Continuous improvement isn't a checklist. It's a practice.
          </p>
          <ul class="space-y-4">
            {[
              "Understand what you're really practicing",
              "Align your actions with your Vision, Mission, and Goals",
              "Build new habits that support elite performance",
              "Create a culture where excellence is practiced daily"
            ].map((item) => (
              <li class="flex items-start gap-3">
                <div class="w-5 h-5 rounded-full bg-accent/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                  <div class="w-2 h-2 rounded-full bg-accent" />
                </div>
                <span class="text-slate-200">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
