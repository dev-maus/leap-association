---
import CTAButtons from '../common/CTAButtons';

interface Props {
  heading?: string;
  description?: string;
  class?: string;
}

const {
  heading = "Ready to Transform Your Practice?",
  description = "Discover what you're practicing and build the patterns that create excellence.",
  class: className = '',
} = Astro.props;
---

<section class={`${className}`}>
  <div class="w-full">
    <div
      class="relative overflow-hidden text-center px-6 py-24 lg:px-20 lg:py-32 bg-[#FAF7F2]"
    >
      <!-- Decorative Ring Circles -->
      <div class="absolute -top-32 -left-32 w-[300px] h-[300px] rounded-full border border-primary/20"></div>
      <div class="absolute -top-20 -left-20 w-[200px] h-[200px] rounded-full border border-primary/15"></div>
      <div class="absolute -bottom-40 -right-40 w-[400px] h-[400px] rounded-full border border-primary/20"></div>
      <div class="absolute -bottom-24 -right-24 w-[280px] h-[280px] rounded-full border border-primary/15"></div>
      <div class="absolute -bottom-12 -right-12 w-[180px] h-[180px] rounded-full border border-primary/10"></div>
      <div class="absolute top-20 right-20 w-[120px] h-[120px] rounded-full border border-primary/10"></div>
      <div class="absolute bottom-32 left-16 w-[80px] h-[80px] rounded-full border border-primary/15"></div>

      <div class="relative z-10 max-w-3xl mx-auto">
        <h2 class="font-display text-4xl lg:text-5xl font-bold text-primary mb-8 tracking-tight leading-tight">
          {heading}
        </h2>
        <p class="text-xl text-slate-700 mb-12 font-light leading-relaxed">
          {description}
        </p>

        <div class="flex flex-col sm:flex-row gap-5 justify-center">
          <CTAButtons client:load />
        </div>

        <p class="mt-8 text-sm text-slate-500 uppercase tracking-widest font-semibold">
           Start your journey today
        </p>
      </div>
    </div>
  </div>
</section>
