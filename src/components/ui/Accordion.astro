---
interface Props {
  items: Array<{
    question: string;
    answer: string;
  }>;
  class?: string;
}

const { items, class: className = '' } = Astro.props;
---

<div class={`space-y-4 ${className}`}>
  {items.map((item, index) => (
    <details class="bg-white rounded-lg border border-slate-200 p-4">
      <summary class="font-semibold text-slate-900 cursor-pointer hover:text-primary transition-colors">
        {item.question}
      </summary>
      <div class="mt-3 text-slate-600 leading-relaxed">
        {item.answer}
      </div>
    </details>
  ))}
</div>

