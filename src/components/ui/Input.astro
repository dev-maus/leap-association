---
interface Props {
  type?: string;
  name?: string;
  id?: string;
  placeholder?: string;
  value?: string;
  required?: boolean;
  class?: string;
}

const {
  type = 'text',
  name,
  id,
  placeholder,
  value,
  required = false,
  class: className = '',
} = Astro.props;
---

<input
  type={type}
  name={name}
  id={id}
  placeholder={placeholder}
  value={value}
  required={required}
  class={`w-full rounded-lg border border-slate-200 px-4 py-3 text-sm focus:ring-2 focus:ring-primary focus:border-primary ${className}`}
/>

