---
import '../styles/global.css';

const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <meta name="viewport" content="width=device-width" />
    <slot name="head" />
  </head>
  <body>
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary text-white px-4 py-2 rounded-lg z-50">
      Skip to main content
    </a>
    <slot />
    <script define:vars={{ base }}>
      // Redirect auth tokens to callback page if they land on any page
      // This handles cases where Supabase redirects to Site URL instead of callback URL
      (function() {
        const hash = window.location.hash;
        const isCallbackPage = window.location.pathname.includes('/auth/callback');
        
        // Only redirect if we have tokens and we're NOT already on the callback page
        if (hash.includes('access_token=') && !isCallbackPage) {
          const callbackUrl = `${base}auth/callback${window.location.search}${hash}`;
          window.location.replace(callbackUrl);
        }
        
        // If we're on callback page with empty hash, don't interfere (let React component handle it)
      })();
    </script>
  </body>
</html>

